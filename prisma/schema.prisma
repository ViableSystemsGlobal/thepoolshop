  newStatus       CommissionStatus?
  previousAmount  Float?
  newAmount       Float?
  performedBy     String
  reason          String?
  notes           String?
  createdAt       DateTime  @default(now())
  
  commission      Commission @relation(fields: [commissionId], references: [id], onDelete: Cascade)
  
  @@index([commissionId])
  @@index([action])
  @@map("commission_audits")
}

