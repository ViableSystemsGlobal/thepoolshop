model Agent {
  id                String    @id @default(cuid())
  userId            String    @unique
  agentCode         String    @unique
  status            AgentStatus @default(ACTIVE)
  hireDate          DateTime  @default(now())
  territory         String?
  team              String?
  managerId         String?
  commissionRate    Float     @default(0)
  targetMonthly     Float?
  targetQuarterly   Float?
  targetAnnual      Float?
