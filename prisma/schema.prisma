}

model ReturnLine {
  id        String   @id @default(cuid())
  returnId  String
  productId String
  quantity  Float
  unitPrice Float
  lineTotal Float
  reason    String?
  createdAt DateTime @default(now())

  return  Return  @relation(fields: [returnId], references: [id], onDelete: Cascade)
